{
  "version": 2,
  "name": "Birth Wish Hub",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "plugins": [
    {
      "name": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    },
    {
      "name": "@vercel/copy-files",
      "config": {
        "files": [
          {
            "src": "uploads/**",
            "dest": "public/uploads"
          }
        ]
      }
    }
  ]
}